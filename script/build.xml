<?xml version="1.0"?>
<project name="scala-ant-project" basedir=".." default="build"  xmlns:artifact="antlib:org.apache.maven.artifact.ant">

	<artifact:remoteRepository id="scala-repo" 
				url="http://scala-tools.org/repo-releases" />
	<artifact:dependencies pathId="scala.classpath">
		<dependency groupId="org.scala-lang"
				    artifactId="scala-library" 
					version="2.7.1" />
		<dependency groupId="org.scala-lang"
				    artifactId="scala-compiler" 
					version="2.7.1" />
		<remoteRepository refid="scala-repo" />
	</artifact:dependencies>

	<artifact:dependencies pathId="dependency.classpath">
		<dependency groupId="junit" 
					artifactId="junit"
					version="3.8.2" 
					scope="test"/>
		<dependency groupId="javax.servlet" 
					artifactId="servlet-api" 
					version="2.4" 
					scope="provided" />
	</artifact:dependencies>

	<taskdef resource="scala/tools/ant/antlib.xml">
  		<classpath refid="scala.classpath"/>
	</taskdef>

	<import file="jetty.xml" />
	
	<target name="init">
	</target>

	<target name="clean" depends="init">
		<delete dir="target/" />
		<delete dir="tmp/" />
	</target>

	<target name="build" depends="init">
		<mkdir dir="target" />
		<javac destdir="target" source="1.5" target="1.5" debug="true"
 			   deprecation="false" optimize="false" failonerror="true"
               encoding="UTF-8">
			   <src path="src" />
			   <classpath refid="dependency.classpath" />
			   <classpath refid="scala.classpath" />
		</javac>	
		<scalac srcdir="src" destdir="target" force="changed">
      		<include name="**/*.scala"/>
			<classpath refid="dependency.classpath" />
			<classpath refid="scala.classpath" />
    	</scalac>
	</target>

	<target name="run">
		<jetty-start 
			webapp-name="webapp" 
			webapp-dir="webapp/"
			envXml="jetty.env.xml"
			port="9090"
	 	/>
	</target>

</project>

